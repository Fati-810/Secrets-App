<%- include('partials/header') %>
    <div class="container mt-5">
        <!-- Flash messages -->
        <% if (success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
                <%= success_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
                <% if (error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
                        <%= error_msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <!-- Edit Secret Form -->
                        <h1 class="text-center mb-4">Edit Your Secret</h1>
                        <form action="/edit-secret" method="POST">
                            <div class="form-group mb-3">
                                <textarea class="form-control" name="newSecret" rows="5">
                                    <%= oldSecret %>
                                </textarea>
                            </div>
                            <input type="hidden" name="oldSecret" value="<%= oldSecret %>">
                            <div class="text-center">
                                <button type="submit" class="btn btn-dark btn-lg">Update Secret</button>
                            </div>
                        </form>
    </div>
    <%- include('partials/footer') %>